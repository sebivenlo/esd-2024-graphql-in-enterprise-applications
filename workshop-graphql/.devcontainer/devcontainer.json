{
    "name": "Java with Cassandra",
    "dockerComposeFile": "../docker/docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspaces/workshop-graphql",    
    "features": {
        "ghcr.io/devcontainers/features/java:1": {},
        "ghcr.io/devcontainers-extra/features/maven-sdkman:2": {},
        "ghcr.io/devcontainers-extra/features/springboot-sdkman:2": {},
        "docker-in-docker": {
            "version": "latest"
        }
    },
    "forwardPorts": [8080, 9042],
    "customizations": {
        "vscode": {
            "settings": {
                "java.jdt.ls.java.home": "/usr/lib/jvm/msopenjdk-current"
            },
            "extensions": [
                "vscjava.vscode-java-pack",
                "pivotal.vscode-spring-boot",
                "graphql.vscode-graphql"
            ]
        }
    },
    "mounts": [
        "type=volume,source=maven_cache,target=/root/.m2"
    ],
    "remoteEnv": {
        "SPRING_DATA_CASSANDRA_CONTACT_POINTS": "cassandra",
        "SPRING_DATA_CASSANDRA_PORT": "9042",
        "SPRING_DATA_CASSANDRA_LOCAL_DATACENTER": "datacenter1",
        "SPRING_DATA_CASSANDRA_KEYSPACE_NAME": "graphql_keyspace"

    }
}
